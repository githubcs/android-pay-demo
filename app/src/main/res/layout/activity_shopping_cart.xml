<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.beecloud.sdk_demo.ShoppingCartActivity">

    <ListView
        android:id="@+id/lstViewShoppingCart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="200dp" />

    <ImageView
        android:id="@+id/imageWXQRCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp" />

    <WebView
        android:id="@+id/webView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/imageWXQRCode"
        android:layout_marginBottom="80dp" />

    <Button
        android:id="@+id/btnPay"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:background="#007edf"
        android:text="结算"
        android:textColor="#ffffff"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/txtLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        android:text="实际项目中建议将二维码放在一个单独的页面中显示" />

    <Button
        android:id="@+id/btnQueryAndRefund"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="60dp"
        android:layout_toRightOf="@id/btnPay"
        android:background="#007edf"
        android:text="查询/退款"
        android:textColor="#ffffff"
        android:textSize="20dp" />
</RelativeLayout>
